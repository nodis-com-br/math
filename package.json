{
  "name": "@nodis/math",
  "version": "1.1.0",
  "description": "Library of general resources to be consumed by another frontend projects.",
  "repository": "https://github.com/nodis-com-br/frontend-math.git",
  "author": "Thiago Oliveira <thiago.oliveira@nodis.com.br>",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "publish-package": "yarn build && yarn publish --access restricted",
    "lint": "run-s code-style:**",
    "code-style:typescript": "tsc --noEmit",
    "code-style:prettier": "prettier --check './**/*.js'",
    "format": "run-s format:**",
    "format:prettier": "yarn build && prettier --write './**/*.{js,ts}'",
    "cm": "git add . && git-cz"
  },
  "dependencies": {},
  "devDependencies": {
    "git-cz": "3.3.0",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "rollup": "1.27.3",
    "rollup-plugin-typescript2": "0.25.2",
    "typescript": "3.7.2",
    "yarn-run-all": "3.1.1"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "types": "dist/index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn format:prettier",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
